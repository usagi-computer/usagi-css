{
  "name": "usagi.css",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "vite": "vite",
    "vite:build": "vite build",
    "sass": "sass",
    "sass:dev": "sass styles/:out/ --watch",
    "sass:build": "sass styles/:out/",
    "dev": "concurrently \"pnpm run sass:dev\" \"pnpm run vite\"",
    "release:minify": "pnpm dlx lightningcss-cli --minify --sourcemap dist/usagi.css -o dist/usagi.min.css",
    "release:build": "pnpm run vite:build && pnpm run minify"
  },
  "devDependencies": {
    "concurrently": "9.2.1",
    "sass": "1.96.0",
    "vite": "npm:rolldown-vite@7.1.20"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.7"
    }
  },
  "dependencies": {
    "@fontsource/maple-mono": "5.2.6"
  }
}
